<Window x:Class="Card_management_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Card_management_system"
        mc:Ignorable="d"
        
        Title="MainWindow" SizeToContent="Height"
        Width="430" Height="500" Background="Black"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        
        <StackPanel VerticalAlignment="Center">
            <TextBlock
                       Name="titleTextBlock"
                       Foreground="BurlyWood"
                       TextAlignment="Center"
                       FontSize="25pt"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                Text="{Binding ElementName=frameMain,
                Path=Content.Title}"/>
        </StackPanel>
        
        <Frame Grid.Row="1"
               Name="frameMain"
               NavigationUIVisibility="Hidden"
               />

    </Grid>
</Window>
