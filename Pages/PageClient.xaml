<Page x:Class="Card_management_system.Pages.PageClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Card_management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="Личный кабинет" Background="Black">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top">
                <TextBlock 
                       Name="textBlockFullName"
                       Width="300"
                       Style="{StaticResource textBlockRegistration}"/>
                <TextBlock Text="Баланс:"
                       Width="90"
                       Style="{StaticResource textBlockRegistration}"/>
                <TextBlock Name="textBlockBalance"
                       Style="{StaticResource textBlockRegistration}"/>
                <Image Source="/Resource/Images/ProfileImage.png"
                   Height="50"
                   Margin="100 0 0 0"
                   Name="imageProfile"
                   PreviewMouseDown="imageProfile_PreviewMouseDown"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <ComboBox Name="comboBoxCardChoose"
                          Width="130"
                          Height="35"/>
                <TextBlock Text="Нет карты?"
                           Style="{StaticResource textBlockRegistration}"
                           Width="100"
                           Foreground="BlueViolet"
                           Margin="10 2 0 0"
                           FontSize="13pt"/>
                
            </StackPanel>

            <StackPanel>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
